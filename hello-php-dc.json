{
    "kind": "DeploymentConfig",
    "apiVersion": "v1",
    "metadata": {
        "name": "hello-php",
        "creationTimestamp": null,
        "labels": {
            "app": "hello-php"
        }
    },
    "spec": {
        "strategy": {
            "type": "Rolling",
            "rollingParams": {
                "updatePeriodSeconds": 1,
                "intervalSeconds": 1,
                "timeoutSeconds": 600,
                "maxUnavailable": "25%",
                "maxSurge": "25%"
            },
            "resources": {}
        },
        "triggers": [
            {
                "type": "ConfigChange"
            },
            {
                "type": "ImageChange",
                "imageChangeParams": {
                    "automatic": true,
                    "containerNames": [
                        "hello-php"
                    ],
                    "from": {
                        "kind": "ImageStreamTag",
                        "name": "hello-php:latest"
                    }
                }
            }
        ],
        "replicas": 1,
        "selector": {
            "app": "hello-php",
            "deploymentconfig": "hello-php"
        },
        "template": {
            "metadata": {
                "creationTimestamp": null,
                "labels": {
                    "app": "hello-php",
                    "deploymentconfig": "hello-php"
                }
            },
            "spec": {
                "containers": [
                    {
                        "name": "hello-php",
                        "image": "172.30.131.34:5000/extdbtest/hello-php@sha256:d27a56931c7bc2de7cb9c672015be1792934eea910258455c819be4cdf69bec4",
                        "ports": [
                            {
                                "containerPort": 8080,
                                "protocol": "TCP"
                            }
                        ],
                        "env": [
                          {
                            "name": "MYSQL_USER",
                            "value": "${MYSQL_USER}"
                          },
                          {
                            "name": "MYSQL_PASSWORD",
                            "value": "${MYSQL_PASSWORD}"
                          },
                          {
                            "name": "MYSQL_DATABASE",
                            "value": "${MYSQL_DATABASE}"
                          }
                        ],
                        "resources": {},
                        "terminationMessagePath": "/dev/termination-log",
                        "imagePullPolicy": "Always"
                    }
                ],
                "restartPolicy": "Always",
                "dnsPolicy": "ClusterFirst"
            }
        }
    },
    "status": {}
}
